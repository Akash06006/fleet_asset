<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.example.fleet.common.BindingUtils"/>

        <variable
                name="loginViewModel"
                type="com.example.fleet.viewmodels.LoginViewModel"/>

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:hideKeyBoardOnClick="@{`back` }"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">

        <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="@{`regular`}"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_25"
                android:text="@string/log_in"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_20"
                tools:ignore="AllCaps"/>

        <View
                android:id="@+id/v_underemail"
                android:layout_width="@dimen/dp_50"
                android:background="@color/colorBlack"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="@dimen/dp_2"
        />

        <LinearLayout
                android:id="@+id/ll_login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/ic_edit_back"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:padding="@dimen/dp_15"

        >

            <com.hbb20.CountryCodePicker
                    android:id="@+id/btn_ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:padding="@dimen/dp_2"
                    app:ccp_arrowSize="@dimen/dp_20"
                    app:ccp_clickable="true"
                    app:ccp_defaultPhoneCode="91"
                    app:ccp_contentColor="@color/colorBlack"
                    app:ccp_showFlag="true"
                    app:ccpDialog_showNameCode="false"
                    app:ccp_showPhoneCode="true"
                    app:ccp_textSize="@dimen/sp_14"/>

            <EditText
                    android:id="@+id/et_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="@string/phone_number"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColorHint="@color/colorGrey"
                    android:maxLength="10"
                    android:ellipsize="start"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    app:font="@{`regular`}"/>

        </LinearLayout>




    <ImageView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/round_layout"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_arrow_forward"
            android:textColor="@color/colorWhite"
            android:onClick="@{(v) -> loginViewModel.clickListener(v)}"

    />
    </LinearLayout>


</layout>