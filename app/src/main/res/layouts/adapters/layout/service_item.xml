<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.fleet.common.BindingUtils" />

        <variable
                name="homeViewModel"
                type="com.example.fleet.viewmodels.home.HomeViewModel" />

    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/shape_round_corner"
            android:elevation="@dimen/dp_20"
            android:padding="@dimen/dp_5">

        <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:id="@+id/mainLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_5">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_marginRight="@dimen/dp_10"
                            android:orientation="vertical"
                            android:weightSum="2">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            <TextView
                                    android:layout_width="@dimen/dp_100"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:padding="@dimen/dp_3"
                                    android:text="@string/due_date"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_12"
                                    app:font="@{`bold`}" />

                            <TextView
                                    android:id="@+id/tv_due_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/dp_5"
                                    android:text="10-12-2020"
                                    android:textAllCaps="false"
                                    android:textColor="@color/list_text_color"
                                    android:textSize="@dimen/sp_12"
                                    app:font="@{`regular`}" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            <TextView
                                    android:layout_width="@dimen/dp_100"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:padding="@dimen/dp_3"
                                    android:text="@string/service_type"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_12"
                                    app:font="@{`bold`}" />

                            <TextView
                                    android:id="@+id/tv_service_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/dp_5"
                                    android:text="10 Tons "
                                    android:textAllCaps="false"
                                    android:textColor="@color/list_text_color"
                                    android:textSize="@dimen/sp_12"
                                    app:font="@{`regular`}" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            <TextView

                                    android:id="@+id/tv_vendor_name"
                                    android:layout_width="@dimen/dp_100"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:padding="@dimen/dp_3"
                                    android:text="@string/vendor_colon"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/sp_12"
                                    app:font="@{`bold`}" />

                            <TextView
                                    android:id="@+id/tv_vendor_name_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/dp_5"
                                    android:text="Akash"
                                    android:textAllCaps="false"
                                    android:textColor="@color/list_text_color"
                                    android:textSize="@dimen/sp_12"
                                    app:font="@{`regular`}" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                        android:id="@+id/btn_update_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/ic_right_arrow" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>
